{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus"
    },
    "imageRegistryServer": {
      "type": "string"
    },
    "imagename": {
      "type": "string"
    },
    "subnetId": {
      "type": "string"
    },
    "registryAdmin": {
      "type": "secureString"
    },
    "registryPassword": {
      "type": "secureString"
    },
    "azureDevOpsOrg": {
      "type": "secureString"
    },
    "adoPat": {
      "type": "secureString"
    }
  },
  "functions": [],
  "variables": {
    "suffix": "[uniqueString(resourceGroup().id)]",
    "aciname": "[concat('aci', variables('suffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkProfiles",
      "apiVersion": "2019-11-01",
      "name": "",
      "location": "[parameters('location')]",
      "properties": {
        "containerNetworkInterfaceConfigurations": [
          {
            "name": "aciagent",
            "properties": {
              "ipConfigurations": [
                {
                  "name": "",
                  "properties": {
                    "subnet": {
                      "id": "[parameters('subnetId')]"
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "name": "[variables('aciname')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[variables('aciname')]",
            "properties": {
              "image": "[parameters('imagename')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": "1.5"
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Never",
        "imageRegistryCredentials": [
          {
            "server": "[parameters('imageRegistryServer')]",
            "username": "[parameters('registryAdmin')]",
            "password": "[parameters('registryPassword')]"
          }
        ],
        "ipAddress": {
          "type": "Private",
          "ports": []
        },
        "networkProfile": {
          "id": "[resourceId('Microsoft.Network/networkProfiles', '')]"
        },
        "initContainers": [
          {
            "name": "agentConf",
            "properties": {
              "environmentVariables": [
                {
                  "name": "AZP_URL",
                  "secureValue": "[parameters('azureDevOpsOrg')]"
                },
                {
                  "name": "AZP_TOKEN",
                  "secureValue": "[parameters('adoPat')]"
                },
                {
                  "name": "AZP_AGENT_NAME",
                  "value": "[variables('aciname')]"
                }
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkProfiles', '')]"
      ]
    }
  ]
}