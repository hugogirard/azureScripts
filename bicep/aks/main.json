{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "addressPrefixHub": {
      "type": "string"
    },
    "addressPrefixSpoke": {
      "type": "string"
    },
    "addressPrefixSubnetFw": {
      "type": "string"
    },
    "addressJumpboxSubnet": {
      "type": "string"
    },
    "addressPrefixSubnetAks": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "sshKey": {
      "type": "string"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "networking",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "addressPrefixHub": {
            "value": "[parameters('addressPrefixHub')]"
          },
          "addressPrefixSpoke": {
            "value": "[parameters('addressPrefixSpoke')]"
          },
          "addressPrefixJumpboxSubnet": {
            "value": "[parameters('addressJumpboxSubnet')]"
          },
          "addressPrefixSubnetAks": {
            "value": "[parameters('addressPrefixSubnetAks')]"
          },
          "addressPrefixSubnetFw": {
            "value": "[parameters('addressPrefixSubnetFw')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": {
              "type": "string"
            },
            "addressPrefixHub": {
              "type": "string"
            },
            "addressPrefixSpoke": {
              "type": "string"
            },
            "addressPrefixSubnetFw": {
              "type": "string"
            },
            "addressPrefixJumpboxSubnet": {
              "type": "string"
            },
            "addressPrefixSubnetAks": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "name": "vnet-hub",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "[parameters('addressPrefixHub')]"
                  ]
                },
                "subnets": [
                  {
                    "name": "AzureFirewallSubnet",
                    "properties": {
                      "addressPrefix": "[parameters('addressPrefixSubnetFw')]"
                    }
                  },
                  {
                    "name": "jumpboxSubnet",
                    "properties": {
                      "addressPrefix": "[parameters('addressPrefixJumpboxSubnet')]"
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "name": "spoke-hub",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "[parameters('addressPrefixSpoke')]"
                  ]
                },
                "subnets": [
                  {
                    "name": "aksSubnet",
                    "properties": {
                      "addressPrefix": "[parameters('addressPrefixSubnetAks')]"
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2019-11-01",
              "name": "[concat('vnet-hub', '/hubToSpoke')]",
              "properties": {
                "remoteVirtualNetwork": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', 'spoke-hub')]"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'vnet-hub')]",
                "[resourceId('Microsoft.Network/virtualNetworks', 'spoke-hub')]"
              ]
            },
            {
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2020-06-01",
              "name": "[concat('spoke-hub', '/spokeToHub')]",
              "properties": {
                "remoteVirtualNetwork": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet-hub')]"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'vnet-hub')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', split(concat('vnet-hub', '/hubToSpoke'), '/')[0], split(concat('vnet-hub', '/hubToSpoke'), '/')[1])]",
                "[resourceId('Microsoft.Network/virtualNetworks', 'spoke-hub')]"
              ]
            }
          ],
          "outputs": {
            "fwSubnetId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet-hub')).subnets[0].id]"
            },
            "aksSubnetId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'spoke-hub')).subnets[0].id]"
            },
            "vnetName": {
              "type": "string",
              "value": "spoke-hub"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "firewall",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "fwSubnetId": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'networking'), '2019-10-01').outputs.fwSubnetId.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": {
              "type": "string"
            },
            "fwSubnetId": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Network/publicIPAddresses",
              "apiVersion": "2020-06-01",
              "name": "pipfw",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Standard"
              },
              "properties": {
                "publicIPAllocationMethod": "Static",
                "publicIPAddressVersion": "IPv4"
              }
            },
            {
              "type": "Microsoft.Network/azureFirewalls",
              "apiVersion": "2020-06-01",
              "name": "azureFw",
              "location": "[parameters('location')]",
              "properties": {
                "additionalProperties": {
                  "Network.DNS.EnableProxy": "True",
                  "Network.DNS.RequireProxyForNetworkRules": "True"
                },
                "ipConfigurations": [
                  {
                    "name": "azureFirewallIpConfigurations",
                    "properties": {
                      "subnet": {
                        "id": "[parameters('fwSubnetId')]"
                      },
                      "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'pipfw')]"
                      }
                    }
                  }
                ],
                "networkRuleCollections": [
                  {
                    "name": "aksfwnr",
                    "properties": {
                      "priority": 100,
                      "action": {
                        "type": "Allow"
                      },
                      "rules": [
                        {
                          "name": "apiudp",
                          "protocols": [
                            "UDP"
                          ],
                          "sourceAddresses": [
                            "*"
                          ],
                          "destinationAddresses": [
                            "AzureCloud.eastus"
                          ],
                          "sourceIpGroups": [],
                          "destinationIpGroups": [],
                          "destinationFqdns": [],
                          "destinationPorts": [
                            "1194"
                          ]
                        },
                        {
                          "name": "apitcp",
                          "protocols": [
                            "TCP"
                          ],
                          "sourceAddresses": [
                            "*"
                          ],
                          "destinationAddresses": [
                            "AzureCloud.eastus"
                          ],
                          "sourceIpGroups": [],
                          "destinationIpGroups": [],
                          "destinationFqdns": [],
                          "destinationPorts": [
                            "9000"
                          ]
                        },
                        {
                          "name": "time",
                          "protocols": [
                            "UDP"
                          ],
                          "sourceAddresses": [
                            "*"
                          ],
                          "destinationAddresses": [],
                          "sourceIpGroups": [],
                          "destinationIpGroups": [],
                          "destinationFqdns": [
                            "ntp.ubuntu.com"
                          ],
                          "destinationPorts": [
                            "123"
                          ]
                        }
                      ]
                    }
                  }
                ],
                "applicationRuleCollections": [
                  {
                    "name": "aksfwar",
                    "properties": {
                      "priority": 100,
                      "action": {
                        "type": "Allow"
                      },
                      "rules": [
                        {
                          "name": "fqdn",
                          "protocols": [
                            {
                              "protocolType": "Http",
                              "port": 80
                            },
                            {
                              "protocolType": "Https",
                              "port": 443
                            }
                          ],
                          "fqdnTags": [
                            "AzureKubernetesService"
                          ],
                          "targetFqdns": [],
                          "sourceAddresses": [
                            "*"
                          ],
                          "sourceIpGroups": []
                        }
                      ]
                    }
                  }
                ],
                "natRuleCollections": []
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'pipfw')]"
              ]
            }
          ],
          "outputs": {
            "fwIp": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', 'pipfw')).ipAddress]"
            }
          }
        }
      },
      "dependsOn": [
        "[extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'networking')]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "aks",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "aksSubnetId": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'networking'), '2019-10-01').outputs.aksSubnetId.value]"
          },
          "fwPublicIp": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'firewall'), '2019-10-01').outputs.fwIp.value]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": {
              "type": "string"
            },
            "aksSubnetId": {
              "type": "string"
            },
            "adminUsername": {
              "type": "string"
            },
            "sshKey": {
              "type": "string"
            },
            "fwPublicIp": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.ContainerService/managedClusters",
              "apiVersion": "2020-07-01",
              "name": "aks-egress",
              "location": "[parameters('location')]",
              "identity": {
                "type": "SystemAssigned"
              },
              "properties": {
                "kubernetesVersion": "1.17.9",
                "dnsPrefix": "aks-egress",
                "enableRBAC": true,
                "networkProfile": {
                  "networkPlugin": "azure",
                  "networkPolicy": "azure",
                  "podCidr": "11.41.0.0/16",
                  "dnsServiceIP": "11.41.0.10",
                  "dockerBridgeCidr": "172.17.0.1/16",
                  "loadBalancerSku": "standard",
                  "outboundType": "userDefinedRouting"
                },
                "agentPoolProfiles": [
                  {
                    "name": "systemPool",
                    "count": 2,
                    "vmSize": "Standard_DS3_v2",
                    "osDiskSizeGB": 100,
                    "vnetSubnetID": "[parameters('aksSubnetId')]",
                    "osType": "Linux",
                    "maxCount": 5,
                    "minCount": 2,
                    "scaleSetPriority": "Regular",
                    "enableAutoScaling": true,
                    "mode": "System",
                    "type": "VirtualMachineScaleSets"
                  }
                ],
                "linuxProfile": {
                  "adminUsername": "[parameters('adminUsername')]",
                  "ssh": {
                    "publicKeys": [
                      {
                        "keyData": "[parameters('sshKey')]"
                      }
                    ]
                  }
                },
                "apiServerAccessProfile": {
                  "enablePrivateCluster": true,
                  "authorizedIPRanges": [
                    "[parameters('fwPublicIp')]"
                  ]
                }
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'firewall')]",
        "[extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'networking')]"
      ]
    }
  ]
}